:80 {
  root * /srv/frontend
  file_server

  # Alles unter /api an das Backend weiterreichen
  handle_path /api/* {
    reverse_proxy backend:8080
  }

  # Optional: 10 Minuten Cache f√ºr statische Assets
  @assets {
    path *.js *.css *.png *.jpg *.jpeg *.gif *.svg *.ico *.webp *.woff *.woff2
  }
  header @assets Cache-Control "public, max-age=600, immutable"
}